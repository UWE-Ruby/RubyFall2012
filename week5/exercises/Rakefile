task :test do
	puts "Hello World!"
end
task :list_names do
	File.open("names","r") do |n|
		n.each do |l|
			puts l
		end
	end
end
task :create_directory do
	Dir.mkdir("class") unless Dir.exists?("class")
end
task :populate_directory => [:create_directory] do
	parse_name_file("names")

end

def parse_name_file(file)
	f = File.open(file,"r")
	Dir.cd("class")
	f.readlines.each do |n|
		Dir.mkdir(n)
	end
end

